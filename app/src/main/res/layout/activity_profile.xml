                stv:sRightIconRes="@mipmap/ic_arrow_next"
                stv:sRightTextSize="12dp"
                stv:sRightTextString="小蓬莱" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextSize="14dip"
