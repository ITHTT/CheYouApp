                stv:sRightIconRes="@mipmap/ic_arrow_next"
                stv:sRightTextSize="12dp"
                stv:sRightTextString="用最初的心,走最远的路" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextSize="14dip"
                stv:sLeftTextString="QQ绑定"
                stv:sRightIconRes="@mipmap/ic_arrow_next"
                stv:sRightTextSize="12dp"
                stv:sRightTextString="85697890" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextSize="14dip"
                stv:sLeftTextString="微信绑定"
                stv:sRightIconRes="@mipmap/ic_arrow_next"
                stv:sRightTextSize="12dp"
                stv:sRightTextString="85697890" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorGrayc" />


            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextSize="14dip"
                stv:sLeftTextString="收货地址管理"
                stv:sRightIconRes="@mipmap/ic_arrow_next"
                stv:sRightTextSize="12dp"
                stv:sRightTextString="陕西省西安" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="我的爱车"
                stv:sRightTextBackground="@android:drawable/ic_menu_add"
                stv:sRightTextColor="@color/colorPrimary"
                stv:sRightTextSize="10sp" />

