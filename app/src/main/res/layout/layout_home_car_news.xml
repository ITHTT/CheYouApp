<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">
    <View style="@style/HorizontalLineStyle"/>
    <TextView
        android:id="@+id/tv_car_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#333333"
        android:layout_marginTop="12dp"
        tools:text="更高级的大玩具 全新Jeep牧马人新车解析"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <com.hw.cy.app.view.widget.ResizeImageView
            android:id="@+id/iv_car_news_thumb_01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <com.hw.cy.app.view.widget.ResizeImageView
            android:id="@+id/iv_car_news_thumb_02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1" />
        <com.hw.cy.app.view.widget.ResizeImageView
            android:id="@+id/iv_car_news_thumb_03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_car_news_img_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="12sp"
        android:textColor="#999999"
        tools:text="01/13"/>
</LinearLayout>